pipeline {
    agent {
            docker { image 'maven:3.3.3' }
        }
    stages {
        stage('Build') {
            steps {
             bat 'mvn --version'
                bat 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test') {
            steps {
                bat 'make check'
                junit 'reports/**/*.xml'
            }
        }
    }
}