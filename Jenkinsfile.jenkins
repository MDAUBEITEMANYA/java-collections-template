pipeline {
    agent {
           { docker { image 'maven:3.3.3' } }
        }
    stages {
        stage('Build') {
            steps {
             sh 'mvn --version'
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'make check'
                junit 'reports/**/*.xml'
            }
        }
    }
}